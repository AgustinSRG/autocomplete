{
  "private": true,
  "scripts": {
    "postinstall": "lerna bootstrap",
    "start": "docsify serve .",
    "start:docs": "docsify serve docs",
    "prebuild": "npm run clean:build",
    "build": "rollup -c",
    "clean": "npm run clean:build && lerna clean",
    "clean:build": "lerna exec -- rimraf dist LICENSE",
    "lint": "eslint --fix --ignore-path .gitignore --ext .js,.vue .",
    "publish": "lerna exec -- npm publish"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint --",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.2.3",
    "@babel/preset-env": "^7.2.3",
    "@vue/eslint-config-prettier": "^4.0.1",
    "babel-eslint": "^10.0.1",
    "docsify-cli": "^4.3.0",
    "eslint": "^5.12.0",
    "eslint-config-prettier": "^3.5.0",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-vue": "^5.1.0",
    "husky": "^1.3.1",
    "lerna": "^3.10.5",
    "lint-staged": "^8.1.0",
    "rimraf": "^2.6.3",
    "rollup": "^1.1.0",
    "rollup-plugin-babel": "^4.3.0",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-copy": "^0.2.3",
    "rollup-plugin-postcss": "^2.0.3",
    "rollup-plugin-terser": "^4.0.2",
    "rollup-plugin-vue": "^4.6.1",
    "vue-template-compiler": "^2.6.6"
  }
}
